{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "~/*": ["./src/*"],

      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@shared/*": ["./src/shared/*"],
      "@styles/*": ["./src/styles/*"],
      "@components/*": ["./src/components/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/Federation/Club/Modal/delete.js",
    "src/components/Federation/Club/Modal/edit.js",
    "src/pages/federacao/categorias.js",
    "src/pages/federacao/competicoes.js",
    "src/shared/utils/utils.js",
    "src/pages/index.js"
  ],
  "exclude": ["node_modules", "dist", "coverage", ".next"]
}
